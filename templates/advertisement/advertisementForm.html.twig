{% extends "base.html.twig" %}
{% block body %}
    {{ include('main/menu.html.twig') }}
    {# body #}

    <div class="body container form">
        <p><br /></p>
        <h3 class="txt_center">{{ adverTitle }}</h3>
        <form class="center_form" method="post"
              action= {{ pathForm }}
                >
            <!--mode de transport-->
            {{ form_row(form._token) }}
            <div class="form-group">
                <label for="type">Mode de transport</label>
                {{ form_row(form.transportMode) }}
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                {{ form_row(form.packageType) }}
            </div>

            <div class="form-group">
                <label for="type">Poid</label>
                {{ form_row(form.weight) }}
            </div>

            <label for="email">Trajet</label>
            <div class="form-group flex">
                {{ form_row(form.fromCountry) }}
                <div class="form-group w25">
                    {{ form_row(form.fromCity) }}
                </div>
                <i class="fa fa-long-arrow-right fa-2x" aria-hidden="true"></i>
                {{ form_row(form.toCountry) }}
                <div class="form-group w25">
                    {{ form_row(form.toCity) }}
                </div>
            </div>

            <div class="form-group">
                <label for="date">Date de depart</label>
                {{ form_row(form.date) }}
            </div>
            <br />
            <!--description-->
            <div class="form-group">
                <label for="desc">Description</label>
                {{ form_row(form.description) }}
            </div>
            <!--check-->
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="condition" required value="1">
                    <a style="color:black;" href="{{ path('download_declaration_confidence') }}" target = "_blank">Oui, j'imprimme et je signe Le contrat de confiance</a>

                    <span class="form-checkbox col-sm-12" style="color: black;">
                        <input type="checkbox" name="condition" value="condition" required> Veuillez vérifier si à usage personnel et si l’ordonnance est obligatoire <br>
                   </span>
                    <span class="form-checkbox col-sm-12" style="color: black;">
                        <input type="checkbox" name="condition" value="condition" required>Veuillez vérifier si l’objet est légalement transportable dans le pays de destination <br>
                   </span>


                </label>
            </div>
            <button type="submit" class="btn btnjcv">
               {% if isAdd %}
                   Ajouter
               {% else %}
                   Modifier
               {% endif %}

            </button>
            {#{{ form_rest(form) }}#}
        </form>

    </div>
{% endblock body %}